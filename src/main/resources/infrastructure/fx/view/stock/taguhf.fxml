<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="infrastructure.fx.controller.stock.TagUHFController">
    <top>
        <ToolBar>
            <Button text="Nuevo" onAction="#nuevo"/>
            <Button text="Guardar" onAction="#guardar"/>
            <Button text="Eliminar" onAction="#eliminar"/>
            <Button text="Refrescar" onAction="#refresh"/>
            <Button text="Detectar TAG" onAction="#detectarTag"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="TAG UHF"/>
        </ToolBar>
    </top>

    <center>
        <SplitPane orientation="VERTICAL">
            <VBox spacing="10">
                <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                <GridPane hgap="10" vgap="10">

                    <!-- EPC detectado -->
                    <Label text="EPC:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtEpc" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="250"/>

                    <!-- Selección de destino (Empleado o Equipment) -->
                    <Label text="Asignar a:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="cmbTipo" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="200"/>

                    <!-- Selección de entidad dinámica -->
                    <Label text="Entidad:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="cmbAsignacion" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="250"/>

                    <!-- Estado activo -->
                    <Label text="Activo:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <CheckBox fx:id="chkActivo" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <!-- Filtro por EPC -->
                    <Label text="Buscar EPC:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtFiltroEpc" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                    <Button text="Buscar" onAction="#buscarEpc" GridPane.rowIndex="4" GridPane.columnIndex="2"/>

                </GridPane>
            </VBox>

            <!-- Tabla de tags -->
            <TableView fx:id="tabla">
                <columns>
                    <TableColumn fx:id="colId" text="ID"/>
                    <TableColumn fx:id="colEpc" text="EPC"/>
                    <TableColumn fx:id="colTipo" text="Tipo"/>
                    <TableColumn fx:id="colAsignado" text="Asignado a"/>
                    <TableColumn fx:id="colActivo" text="Activo"/>
                </columns>
            </TableView>
        </SplitPane>
    </center>
</BorderPane>