<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>
<?import java.net.URL?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="infrastructure.fx.controller.LoginController"
      spacing="12" alignment="CENTER"
      prefWidth="400" prefHeight="300"
      styleClass="login-root">

    <stylesheets>
        <URL value="@/infrastructure/fx/css/login.css"/>
    </stylesheets>

    <VBox spacing="12" alignment="CENTER" styleClass="login-card">
        <Label text="Inventario - Login" styleClass="login-title"/>

        <TextField fx:id="txtUser" promptText="Usuario" />
        <PasswordField fx:id="txtPass" promptText="Contraseña" />

        <Label fx:id="lblCapsLock" text="⚠ Bloq Mayús activado"
               visible="false" styleClass="caps-warning"/>

        <!-- Bigger, ocean-themed button -->
        <Button text="Ingresar" onAction="#login" styleClass="btn-primary"/>
        <Label fx:id="lblMsg" styleClass="error-msg"/>
    </VBox>
</VBox>