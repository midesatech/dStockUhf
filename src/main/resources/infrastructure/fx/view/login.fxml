<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="infrastructure.fx.controller.LoginController"
      spacing="8" alignment="CENTER" style="-fx-padding:20;">

    <Label text="Inventario - Login" style="-fx-font-size:16; -fx-font-weight:bold;"/>
    <TextField fx:id="txtUser" promptText="Usuario"/>
    <PasswordField fx:id="txtPass" promptText="Contraseña"/>

    <!-- Nueva etiqueta para CapsLock -->
    <Label fx:id="lblCapsLock" text="⚠ Bloq Mayús activado"
           textFill="red" visible="false"/>

    <Button text="Ingresar" onAction="#login"/>
    <Label fx:id="lblMsg" textFill="red"/>
</VBox>
