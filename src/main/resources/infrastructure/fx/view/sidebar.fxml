<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.SVGPath?>

<?import java.net.URL?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="infrastructure.fx.controller.SidebarController"
      fx:id="root"
      spacing="8"
      style="-fx-background-color: #f4f4f4; -fx-padding: 8;">

    <stylesheets>
        <URL value="@/infrastructure/fx/css/sidebar.css"/>
    </stylesheets>

    <!-- Barra superior: SOLO el botón drawer (siempre visible) -->
    <HBox spacing="8" alignment="CENTER_LEFT">
        <Button fx:id="btnToggle" onAction="#toggle" styleClass="icon-button">
            <graphic>
                <!-- 3 bars -->
                <SVGPath styleClass="icon-hamburger"
                         content="M2 6 H22 V8 H2 Z M2 12 H22 V14 H2 Z M2 18 H22 V20 H2 Z"/>
            </graphic>
        </Button>
    </HBox>

    <!-- Contenido del menú que se oculta/expande -->
    <VBox fx:id="menuWrapper" VBox.vgrow="ALWAYS" spacing="8"
          minHeight="0" maxHeight="Infinity">
        <!-- Encabezado del menú -->
        <HBox spacing="8" alignment="CENTER_LEFT">
            <SVGPath content="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z" fill="#2c3e50" />
            <Label text="Inventario" style="-fx-font-weight: bold; -fx-font-size: 14;"/>
        </HBox>

        <!-- Árbol de navegación -->
        <TreeView fx:id="menuTree"
                  VBox.vgrow="ALWAYS" minHeight="0" maxHeight="Infinity"
                  style="-fx-background-color: transparent; -fx-border-color: transparent;"/>
    </VBox>
</VBox>