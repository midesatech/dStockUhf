<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.SVGPath?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="infrastructure.fx.controller.SidebarController"
      fx:id="root"
      spacing="8"
      style="-fx-background-color: #f4f4f4; -fx-padding: 8;">

    <!-- Barra superior: SOLO el botón drawer (siempre visible) -->
    <HBox spacing="8" alignment="CENTER_LEFT">
        <Button fx:id="btnToggle" text="≡" onAction="#toggle"
                style="-fx-font-size: 14; -fx-background-color: transparent;"/>
    </HBox>

    <!-- Contenido del menú que se oculta/expande -->
    <VBox fx:id="menuWrapper" VBox.vgrow="ALWAYS" spacing="8">
        <!-- Encabezado del menú -->
        <HBox spacing="8" alignment="CENTER_LEFT">
            <SVGPath content="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z" fill="#2c3e50" />
            <Label text="Inventario" style="-fx-font-weight: bold; -fx-font-size: 14;"/>
        </HBox>

        <!-- Árbol de navegación -->
        <TreeView fx:id="menuTree"
                  style="-fx-background-color: transparent; -fx-border-color: transparent;"/>
        <!-- Botón cerrar sesión
        <Button text="⎋ Cerrar sesión"
                onAction="#logout"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;"/>-->

    </VBox>
</VBox>