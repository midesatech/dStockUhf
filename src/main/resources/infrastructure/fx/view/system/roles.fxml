<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="infrastructure.fx.controller.system.RolesController">

    <!-- Toolbar superior -->
    <top>
        <ToolBar>
            <Button text="Nuevo" onAction="#newRole"/>
            <Button text="Guardar" onAction="#saveRole"/>
            <Button text="Eliminar" onAction="#deleteRole"/>
            <Button text="Refrescar" onAction="#refreshRoles"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="GestiÃ³n de Roles" style="-fx-font-weight: bold;"/>
        </ToolBar>
    </top>

    <!-- Panel izquierdo: formulario de rol -->
    <left>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Nombre del rol"/>
            <TextField fx:id="txtName" promptText="Ingrese nombre de rol"/>
            <Label text="Permisos disponibles"/>
            <ListView fx:id="lstPermissions" prefHeight="200.0"/>
        </VBox>
    </left>

    <!-- Panel central: tabla de roles -->
    <center>
        <VBox spacing="5">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Roles existentes" style="-fx-font-weight: bold;"/>
            <TableView fx:id="tbl" prefHeight="400">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="colName" text="Nombre" prefWidth="200"/>
                    <TableColumn fx:id="colPerms" text="Permisos" prefWidth="300"/>
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>